# JavaScript Engine Path
# Set the path to your JavaScript engine executable
# For Windows, edit the run.bat
ENGINE_PATH=enter your engine path like this without spaces

# Test Timeout (in seconds)
# Maximum time allowed for each test to run
TEST_TIMEOUT=30

# Verbose Output
# Set to true for detailed test output
VERBOSE=false

# Test Directories
# Directories containing test files
TEST_DIRS=core,es6plus,async,performance,edge-cases

# Output Format
# Options: simple, detailed
OUTPUT_FORMAT=simple

# Score System
# Enable scoring based on execution time
ENABLE_SCORING=true